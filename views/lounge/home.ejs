<style>
  .timer-todo-preview,
  .ranking-team-preview {
    display: flex;
    gap: 5rem;
    margin-bottom: 5rem;
  }

  .timer-todo-preview,
  .ranking-team-preview {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
    margin-bottom: 4rem;
  }

  .timer-preview,
  .todo-preview,
  .ranking-preview,
  .team-members {
    border-radius: 25px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    background: rgba(255, 255, 255, 0.75);
    backdrop-filter: blur(20px);
    padding: 2rem;
    transition: transform 0.2s ease;
  }

  .timer-preview:hover,
  .todo-preview:hover,
  .team-members:hover {
    transform: scale(1.02);
  }

  .timer-preview {
    flex: 1;
    min-width: 280px;
    text-align: center;
    font-size: 2rem;
    font-weight: 600;
    color: #5d3a00;
  }

  .timer-preview span {
    display: block;
    font-size: 3rem;
    margin-top: 1rem;
    color: #b45c00;
  }

  .todo-preview {
    flex: 2;
    min-width: 300px;
    font-size: 1.4rem;
  }

  .todo-list-preview {
    list-style-type: none;
    padding-left: 1.2rem;
  }

  .todo-list-preview li {
    padding: 0.75rem 1rem;
    margin-bottom: 0.5rem;
    background-color: #fffdf7;
    border-left: 5px solid #ffc09f;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    font-weight: 500;
  }

  .ranking-team-preview {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .team-members {
    flex: 1;
    min-width: 280px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .avatar {
    border-radius: 50%;
    width: 96px;
    height: 96px;
    padding: 5px;
    background-color: #fff;
    border: 4px solid #ffd6d6;
    transition: transform 0.3s ease;
  }

  .avatar:hover {
    transform: rotate(-5deg) scale(1.05);
    border-color: #ffa69e;
  }
</style>

<div class="section home active" data-section="home">
  <div class="timer-todo-preview">
    <div class="timer-preview">
      Total Session Time
      <span><%= totalSessionTime %></span>
    </div>

    <div class="todo-preview">
      <ul class="todo-list-preview">
        <li>Create a GitHub repository and add team members</li>
        <li>Finish wireframes and upload them</li>
        <li>Add collaborators to the repo</li>
      </ul>
    </div>
  </div>

  <div class="ranking-team-preview">
    <div class="team-members">
      <img src="/img/avatar/dog-avatar.svg" alt="Dog Avatar" class="avatar" />
      <img
        src="/img/avatar/elephant-avatar.svg"
        alt="Elephant Avatar"
        class="avatar"
      />
      <img
        src="/img/avatar/penguin-avatar.svg"
        alt="Penguin Avatar"
        class="avatar"
      />
    </div>
  </div>
</div>
