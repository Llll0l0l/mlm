<style>
  .todo {
    text-align: center;
    padding: 0;
    margin: 0;
  }

  .todo h3 {
    font-size: 2rem;
  }

  .todo-list {
    display: flex;
    margin-left: -4rem;
    flex-direction: column;
    text-align: left;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .add-task-btn {
    background-color: rgb(43, 41, 41);
    border: none;
    border-radius: 10px;
    padding: 0.5rem;
  }

  .fa-plus {
    color: white;
    font-size: 1.5rem;
  }

  #new-task {
    max-width: 380px;
    height: 53px;
    outline: none;
    background: none;
    border: none;
    border-bottom: 1px black solid;
    padding: 0 1rem;
    font-size: 1.75rem;
    margin-right: 2rem;
  }

  .fa-xmark {
    margin: 0 1rem;
  }

  .task {
    font-size: 1.75rem;
    width: 400px;
    height: 4rem;
    padding: 1rem;
    border: 1px black solid;
    border-radius: 5px;
    margin-bottom: 0.5rem;
  }

  .task span {
    max-width: 200px;
    display: inline-flex;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .task input {
    width: 1.4rem;
    height: 1.4rem;
    margin-right: 1rem;
    border: 1px black solid;
  }

  .flex {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
  }

  button:hover,
  i:hover {
    cursor: pointer;
  }

  .modal-backdrop {
    opacity: 0.5;
    width: 100vw;
    height: 100vh;
    backdrop-filter: blur(5px);
    margin: 0;
    padding: 0;
    position: absolute;
    top: 0;
    left: 0;
    background-color: white;
    z-index: 1;
  }
  .share-modal {
    position: fixed;
    z-index: 2;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    background-color: #ffffff;
    border: 1px solid #ccc;
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
    border-radius: 1rem;
    width: 90%;
    max-width: 500px;
    padding: 1.5rem;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    box-sizing: border-box;
  }

  .share-modal h2 {
    margin-top: 0;
    font-size: 1.25rem;
    text-align: center;
  }

  .share-modal .link-copy {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }

  .share-modal input.link {
    flex: 1;
    padding: 0.75rem;
    font-size: 1rem;
    border-radius: 0.5rem;
    border: 1px solid #ccc;
    outline: none;
  }

  .share-modal button.copy-link-btn {
    padding: 0.75rem 1rem;
    font-size: 1rem;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background 0.3s;
  }

  .share-modal button.-link-btn:hover {
    background-color: #0056b3;
  }

  @media (max-width: 500px) {
    .share-modal .link-copy {
      flex-direction: column;
    }

    .share-modal button.-link-btn {
      width: 100%;
    }
  }
</style>

<div class="section todo" data-section="todo">
  <h3>
    <% if (title) { %>
    <span><%= title %></span>
    <% } else {%>
    <span class="todo-title">Your To Do</span> <%}%>
    <i class="fa-solid fa-link share-link"></i>
  </h3>
  <div class="flex">
    <div class="task-input">
      <input
        type="text"
        name="new-task"
        id="new-task"
        placeholder="Add new task"
      />
      <button class="add-task-btn"><i class="fa-solid fa-plus"></i></button>
    </div>
    <ul class="todo-list">
      <% if (tasks) { %> <% tasks.forEach(task => { %>
      <li><%= task.title %></li>
      <% }) %> <% } %>
    </ul>
  </div>
  <p class="remaining-todos hidden"></p>
  <!-- TODO: perhaps we should add a quote -->
  <!-- <p class="quote"></p> -->

  <!-- TODO: share link modal -->
  <div class="modal-backdrop hidden"></div>
  <div class="share-modal hidden">
    <h2 class="share-text">You can share the link with your study buddies.</h2>
    <div class="link-copy">
      <input class="link" value="<%=link%>" />
      <button class="copy-link-btn" onclick="copyToClipboard()">Copy</button>
    </div>
  </div>

  <script src="js/lounge/todo.js"></script>
  <script>
    function copyToClipboard() {
      const input = document.querySelector(".link");
      navigator.clipboard
        .writeText(input.value)
        .then(() => {
          input.style.color = "rgb(0,255,0)";
        })
        .catch((err) => {
          input.style.color = "rgb(255,0,0)";
          console.error("Failed to copy: ", err);
        });
    }
  </script>
</div>
